<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Guirbaden.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Guirbaden"
    xmlns:localpages="clr-namespace:Guirbaden.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.ForegroundColor="#689F38"
    Title="Guirbaden">

    <ShellContent
        Icon="logoasso.jpg"
        Title="Association"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Bénévolat"
        Icon="{AppThemeBinding Light=lightconstruction.png, Dark=darkconstruction.png}"
        ContentTemplate="{DataTemplate local:Benevolat}"
        Route="BenevolatPage" />
    <ShellContent
        Title="Accès"
        Icon="{AppThemeBinding Light=lightoip.png, Dark=darkoip.png}"
        ContentTemplate="{DataTemplate local:AcessMap}"
        Route="MapPage" />
    <ShellContent
        Title="Histoire du château"
        Icon="{AppThemeBinding Light=lighthistory.png, Dark=darkhistory.png}"
        ContentTemplate="{DataTemplate localpages:History}"
        Route="HistoryPage" />
    <ShellContent
        Title="Plan du château"
        Icon="{AppThemeBinding Light=lightmap.png, Dark=darkmap.png}"
        ContentTemplate="{DataTemplate localpages:Plan}"
        Route="PlanPage" />
    <ShellContent
        Title="Animations"
        Icon="{AppThemeBinding Light=lightfestival.png, Dark=darkfestival.png}"
        ContentTemplate="{DataTemplate localpages:Animations}"
        Route="AnimPage" />
    <ShellContent
        Title="Paramètres"
        Icon="{AppThemeBinding Light=lightparam.png, Dark=darkparam.png}"
        ContentTemplate="{DataTemplate localpages:Param}"
        Route="ParamPage" />
</Shell>
