<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guirbaden.Pages.Param"
             xmlns:viewmodel="clr-namespace:Guirbaden.Viewmodel"
             x:DataType="viewmodel:ParamViewModel"
             IconImageSource="param.jpg"
             Title="Paramètres">
    <VerticalStackLayout>
        <Label Padding="10,0,0,10" Text="Version des informations locales : " />
        <Label Padding="10,0,0,10" Text="{Binding LocalParamDate, StringFormat='{}{0:d/M/yyyy H:mm:ss}'}" />
        <Label Padding="10,0,0,10" IsVisible="{Binding HasNewNetworkData}" Text="Version des informations distantes : " />
        <Label Padding="10,0,0,10" IsVisible="{Binding HasNewNetworkData}" Text="{Binding ServerParamDate, StringFormat='{}{0:d/M/yyyy H:mm:ss}'}" />
        <Button Margin="10" IsVisible="{Binding HasNewNetworkData}" HorizontalOptions="FillAndExpand" Padding="10" Text="Mise à jour des informations" Clicked="Refresh"/>
    </VerticalStackLayout>
</ContentPage>